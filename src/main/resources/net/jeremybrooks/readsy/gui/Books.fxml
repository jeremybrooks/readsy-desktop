<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.jeremybrooks.readsy.controllers.BooksController">
   <children>
      <MenuBar layoutX="7.0" prefHeight="28.0" prefWidth="593.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" text="Add Book" />
                  <MenuItem mnemonicParsing="false" text="Delete Book" />
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
                  <MenuItem fx:id="openEditorMenuItem" mnemonicParsing="false" onAction="#menuOpenEditor" text="Open Editor" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.5" layoutY="28.0" prefHeight="448.0" prefWidth="600.0" AnchorPane.bottomAnchor="-6.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="28.0">
         <items>
            <ListView fx:id="bookList" onMouseClicked="#bookListClicked" prefHeight="448.0" prefWidth="384.0" />
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextArea fx:id="txtText" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" />
                  <Label fx:id="lblDate" text="Label" GridPane.halignment="CENTER">
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblHeading" text="Label" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Italic" size="13.0" />
                     </font>
                  </Label>
                  <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="3">
                     <left>
                        <CheckBox fx:id="cbxRead" mnemonicParsing="false" onAction="#checkboxToggle" text="Read" BorderPane.alignment="CENTER">
                           <padding>
                              <Insets bottom="10.0" left="3.0" right="3.0" top="3.0" />
                           </padding>
                        </CheckBox>
                     </left>
                     <right>
                        <FlowPane alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="btnPreviousDay" mnemonicParsing="false" onMouseClicked="#previousDay" text="&lt;" />
                              <Button fx:id="btnToday" mnemonicParsing="false" onMouseClicked="#today" text="Today" />
                              <Button fx:id="btnNxtDay" mnemonicParsing="false" onMouseClicked="#nextDay" text="&gt;" />
                           </children>
                        </FlowPane>
                     </right>
                  </BorderPane>
               </children>
            </GridPane>
         </items>
      </SplitPane>
   </children>
</AnchorPane>
